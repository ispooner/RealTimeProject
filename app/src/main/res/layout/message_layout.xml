<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Temporary"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/message_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: Yeah"
        android:textColor="#000000"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/message_username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textColor="#000000"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/message_title_textView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/message_content_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sample Content"
        android:textColor="#000000"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/message_title_textView"
        app:layout_constraintStart_toEndOf="@id/message_username_textView"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>